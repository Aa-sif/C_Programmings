#include <stdio.h>

int main() {
  int day = 5;
  
  switch (day) {
    case 1:
      printf("Monday");
      break;
    case 2:
      printf("Tuesday");
      break;
    case 3:
      printf("Wednesday");
      break;
    case 4:
      printf("Thursday");
      break;
    case 5:
      printf("Friday");      //outputs  "Friday" (day 4)
      break;
    case 6:
      printf("Saturday");
      break;
    case 7:
      printf("Sunday");
      break;
  }
    
  return 0;
}


#include <stdio.h>

int main() {
  int day = 6;
  
  switch (day) {
  case 6:
    printf("Today is Saturday");      //Today is Saturday
    break;
  case 7:
    printf("Today is Sunday");
    break;
  default:
    printf("off day");
  }
  
  return 0;
}
